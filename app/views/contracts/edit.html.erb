<div class="container">
<div class="hero-unit">
	<div id="notices">
	</div>
	<h1>Edit Contract</h1>
	
	<%= form_tag("/contracts/" + @contract.id.to_s, :method => "put", :remote => true, :id => "update_contract", :class => "form-horizontal") do %>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'name', nil, :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'name', @contract.name, :placeholder => "Name" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'description', nil, :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'description', @contract.description, :placeholder => "Description" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'note', nil, :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'note', @contract.note, :placeholder => "Note" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'contractNumber', 'Contract Number', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'contractNumber', @contract.contractNumber, :placeholder => "Contract Number" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'validFrom', 'Valid from', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'validFrom', @contract.validFrom, :placeholder => "Valid from", :class => "datepicker" %>	
		      		<script type="text/javascript">
					  $('.datepicker').datepicker();
					</script>
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'validTo', 'Valid to', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'validTo', @contract.validTo, :placeholder => "Valid to", :class => "datepicker" %>
		      		<script type="text/javascript">
					  $('.datepicker').datepicker();
					</script>
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'parentConractId', 'Parent Conract Id', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'parentConractId', @contract.parentContractId, :placeholder => "Parent Conract Id" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'conditions', 'Conditions', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'conditions', @contract.conditions, :placeholder => "Conditions" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<%= submit_tag "Update", :remote => true, :class => "btn btn-primary btn-large" %>
		</div>

	<% end %>

</div>
</div>