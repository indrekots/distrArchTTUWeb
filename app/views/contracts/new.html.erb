<div class="hero-unit">
	<div id="notices">
	</div>

	<%= form_tag("/contracts", :method => "post", :remote => true, :id => "add_contract") do %>

		<p>
			<%= label_tag(:name, "Name") %>
			<%= text_field_tag(:name) %>
		</p>

		<p>
			<%= label_tag(:description, "Description") %>
			<%= text_field_tag(:description) %>
		</p>

		<p>
			<%= label_tag(:note, "Note") %>
			<%= text_field_tag(:note) %>
		</p>

		<p>
			<%= label_tag(:contractNumber, "Contract Number") %>
			<%= text_field_tag(:contractNumber) %>
		</p>

		<p>
			<%= label_tag(:validFrom, "Valid from") %>
			<%= text_field_tag :validFrom, nil, :class => 'datepicker' %>
			<script type="text/javascript">
			  $('.datepicker').datepicker();
			</script>
		</p>

		<p>
			<%= label_tag(:validTo, "Valid to") %>
			<%= text_field_tag :validTo, nil, :class => 'datepicker' %>
			<script type="text/javascript">
			  $('.datepicker').datepicker();
			</script>
		</p>

		<p>
			<%= label_tag(:parentConractId, "Parent Conract Id") %>
			<%= text_field_tag(:parentConractId, nil) %>
		</p>

		<p>
			<%= label_tag(:conditions, "Conditions") %>
			<%= text_field_tag(:conditions) %>
		</p>

		<p>
			<%= submit_tag "Lisa", :remote => true %>
		</p>

	<% end %>
</div>