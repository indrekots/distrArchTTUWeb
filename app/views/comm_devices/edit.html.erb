<div class="container">
<div class="hero-unit">
	<div id="notices">
	</div>
	<h1>Edit device</h1>

	<%= form_tag("/commDevices/" + @commDevice.id.to_s, :method => "put", :remote => true, :id => "update_commDevice", :class => "form-horizontal") do %>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'valueText', "Value text", :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'valueText', @commDevice.valueText, :placeholder => "Value text" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'commDeviceType', "Device type", :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'commDeviceType', @commDevice.commDeviceType, :placeholder => "Device type" %>	
		    	</div>
		  	</div>
		</div>

		<%= hidden_field_tag 'customerId', @commDevice.customerId %>

		<div class="control-group">
			<%= submit_tag "Update", :remote => true, :class => "btn btn-primary btn-large" %>
		</div>

	<% end %>
</div>
</div>