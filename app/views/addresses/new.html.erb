		      		<%= text_field_tag 'country', nil, :placeholder => "Country" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'note', nil, :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'note', nil, :placeholder => "Note" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'house', 'House', :class => 'control-label' %>
