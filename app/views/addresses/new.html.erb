		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'phone', 'Phone', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'phone', nil, :placeholder => "Phone" %>	
		    	</div>
		  	</div>
		</div>

		<div class="control-group">
			<div class="control-group">
		    	<%= label_tag 'sms', 'SMS', :class => 'control-label' %>
		    	<div class="controls">
		      		<%= text_field_tag 'sms', nil, :placeholder => "SMS" %>	
